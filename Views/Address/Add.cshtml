@{
}
<div class="add-address">
    <div class="container">
        <div class="address-map">
            <img src="/images/map.png" alt="map" />
        </div>

        <div class="newaddress-info">
            <form>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="title">TITLE:</label>
                    <input value="Mom" />
                </div>
                <div class="form-group">
                    <label for="newAddress">Enter a new Address:</label>
                    <input value="3646 S 58th Ave, Cicero, IL 60804, U..." />
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Use current location</label>
                </div>

                <div class="form-group save-btn" href="/"> Save Address</div>
            </form>
        </div>
    </div>
</div>