@model EditUserViewModel

@{
    ViewData["Title"] = "Account";
}


<partial name="../Partials/_Top-nav.cshtml" />

<div class="profile">
    <div class="container">
        <div class="profile-person">
            <div class="image">
                <img src="@Model.ProfileImageUrl" alt="profile-image" />        
                <a asp-controller="Account" asp-action="Edit"><div class="icon"><i class="fa-light fa-pen"></i></div></a>
            </div>
            <div class="user-name">@Model.FirstName @Model.LastName</div>
            <div class="email">@Model.Email</div>
        </div>
        <div class="profile-info">
            <a asp-controller="Account" asp-action="Orders"> <div class="info"><i class="fa-light fa-calendar"></i>Order History<i class="fa-regular fa-chevron-right"></i></div></a>
            <a asp-controller="Account" asp-action="PaymentMethods"> <div class="info"><i class="fa-regular fa-credit-card"></i>Payment method<i class="fa-regular fa-chevron-right"></i></div></a>
            <a asp-controller="Account" asp-action="MyAddress"><div class="info"><i class="fa-light fa-location-dot"></i>My address<i class="fa-regular fa-chevron-right"></i></div></a>
            <a asp-controller="PromoCode" asp-action="PromoCodesCurrent"><div class="info"><i class="fa-light fa-gift"></i>My promocodes<i class="fa-regular fa-chevron-right"></i></div></a>
            <a asp-controller="Account" asp-action="SignOutUser"> <div class="info"><i class="fa-regular fa-right-from-bracket"></i>Sign out<i class="fa-regular fa-chevron-right"></i></div></a>
        </div>
    </div>
</div>
<partial name="../Shared/_BottomNav.cshtml" />