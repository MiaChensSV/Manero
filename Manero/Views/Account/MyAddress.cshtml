@model UserAddressesViewModel
<div class="my-address">
    <div class="container">
        <div class="addresses">
            @foreach(var item in Model.UserAddresses)
            {
                <div class="box">
                    <div class="icon"><i class="fa-regular fa-house"></i></div>
                    <div class="info">
                        <h4>@item.LocationName</h4>
                        <h4>@item.Address.City</h4>
                        <h4>@item.Address.Country</h4>
                        <h4>@item.Address.PostalCode</h4>
                        <h4>@item.Address.StreetName</h4>
                        <p>8000 S Kirkland Ave, Chicago...</p>
                    </div>
                    <div class="icon"><i class="fa-light fa-pen"></i></div>
                </div>
            }
            
            
        <a asp-controller="Account" asp-action="AddAddress">
            <div class="add">
                <i class="fa-regular fa-plus"></i>
                <p>Add a new address</p>
            </div>
        </a>
        </div>
    </div>
</div>